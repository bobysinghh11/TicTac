<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#34C9DB"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView

                android:id="@+id/win1"
                android:textSize="25dp"
                android:layout_toRightOf="@id/tvplayer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView

                android:id="@+id/win2"
                android:textSize="25dp"
                android:layout_below="@id/tvplayer2"
                android:layout_toRightOf="@id/tvplayer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        <TextView

                android:textStyle="bold"
                android:id="@+id/TvPlayer1"
                android:text="Player 1:"
                android:textSize="25dp"
                android:textColor="#F8FBFC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
                android:textStyle="bold"
                android:id="@+id/Tvplayer2"
                android:text="Player 2:"
                android:textSize="25dp"
                android:textColor="#F8FBFC"
                android:layout_below="@id/TvPlayer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="#F8FBFC"
                android:textSize="25dp"
                android:layout_toRightOf="@id/TvPlayer1"
                android:layout_marginLeft="10dp"
                android:id="@+id/tvplayer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        <TextView
                android:textColor="#F8FBFC"
                android:textSize="25dp"
                android:layout_toRightOf="@id/Tvplayer2"
                android:layout_below="@id/tvplayer1"
                android:layout_marginLeft="10dp"
                android:id="@+id/tvplayer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>





    <LinearLayout
            android:background="#F8FBFC"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        <Button
                android:textColor="#34C9DB"
                android:textSize="50dp"
                android:id="@+id/btn1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <Button
                android:textColor="#34C9DB"
                android:textSize="50dp"
                android:id="@+id/btn2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <Button
                android:textColor="#34C9DB"
                android:textSize="50dp"
                android:id="@+id/btn3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>




    </LinearLayout>

    <LinearLayout
            android:background="#F8FBFC"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        <Button
                android:textColor="#34C9DB"
                android:textSize="50dp"
                android:id="@+id/btn4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <Button
                android:textColor="#34C9DB"
                android:textSize="50dp"
                android:id="@+id/btn5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <Button
                android:textColor="#34C9DB"
                android:textSize="50dp"
                android:id="@+id/btn6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>




    </LinearLayout>


    <LinearLayout
            android:background="#F8FBFC"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        <Button
                android:textColor="#34C9DB"
                android:textSize="50dp"
                android:id="@+id/btn7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <Button
                android:textColor="#34C9DB"
                android:textSize="50dp"
                android:id="@+id/btn8"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <Button
                android:textColor="#34C9DB"
                android:textSize="50dp"
                android:id="@+id/btn9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout

            android:background="#34C9DB"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <Button

                android:textColor="#F8FBFC"
                android:background="#F98422"
                android:id="@+id/btnReset"
                android:text="Play Again"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




    </LinearLayout>






</LinearLayout>
